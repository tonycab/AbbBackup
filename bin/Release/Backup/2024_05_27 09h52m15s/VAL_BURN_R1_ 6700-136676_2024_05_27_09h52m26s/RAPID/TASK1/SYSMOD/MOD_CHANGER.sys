MODULE MOD_CHANGER(SYSMODULE,NOSTEPIN)

    PROC Changer_Open()
        VAR btnres ouverture;
        CONST string my_message{2}:=["ATTENTION","êtes vous sûr d'ouvrir le changeur?"];
        CONST string my_buttons{2}:=["Oui","Non"];

        ouverture:=UIMessageBox(\Header:="ouverture du changeur"\MsgArray:=my_message\BtnArray:=my_buttons\Icon:=iconwarning);

        IF ouverture=1 THEN
            set Ouverture_changeur;
        ENDIF
    ENDPROC


    PROC Changer_Close()
        VAR btnres fermeture;
        CONST string my_message{2}:=["ATTENTION","êtes vous sûr de fermer le changeur?"];
        CONST string my_buttons{2}:=["Oui","Non"];

        fermeture:=UIMessageBox(\Header:="fermeture du changeur"\MsgArray:=my_message\BtnArray:=my_buttons\Icon:=iconwarning);

        IF fermeture=1 THEN
            reset Ouverture_changeur;
        ENDIF
    ENDPROC





ENDMODULE